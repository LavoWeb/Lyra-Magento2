<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="lyra_gift" translate="label" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[GIFT CARD PAYMENT]]></label>
        <frontend_model>Lyranetwork\Lyra\Block\Adminhtml\System\Config\Fieldset\Dependant</frontend_model>
        <attribute type="expanded">0</attribute>
        <attribute type="feature">gift</attribute>

        <group id="lyra_display_options" translate="label" type="text" sortOrder="41" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[DISPLAY OPTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="active" translate="label comment" type="select" sortOrder="411" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Activation]]></label>
                <comment><![CDATA[Enables / disables this payment method.]]></comment>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <config_path>payment/lyra_gift/active</config_path>
            </field>

            <field id="title" translate="label comment" type="text" sortOrder="412" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Method title]]></label>
                <comment><![CDATA[Method title to display on payment means page.]]></comment>
                <config_path>payment/lyra_gift/title</config_path>
            </field>

            <field id="sort_order" translate="label comment" type="text" sortOrder="413" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Sort order]]></label>
                <comment><![CDATA[In the payment methods list.]]></comment>
                <config_path>payment/lyra_gift/sort_order</config_path>
            </field>

            <field id="module_logo" translate="label comment" type="image" sortOrder="414" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Logo]]></label>
                <comment><![CDATA[Allowed file types: jpeg, gif, png.]]></comment>
                <config_path>payment/lyra_gift/module_logo</config_path>
                <frontend_model>Lyranetwork\Lyra\Block\Adminhtml\System\Config\Form\Field\Logo</frontend_model>
                <backend_model>Lyranetwork\Lyra\Model\System\Config\Backend\Logo</backend_model>
                <upload_dir config="system/filesystem/media" scope_info="0">lyra/images</upload_dir>
                <base_url type="media" scope_info="0">lyra/images</base_url>
            </field>
        </group>

        <group id="lyra_restrictions" translate="label" type="text" sortOrder="42" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[RESTRICTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="allowspecific" translate="label comment" type="allowspecific" sortOrder="421" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Restrict to some countries]]></label>
                <comment><![CDATA[Buyer's billing countries in which this payment method is available.]]></comment>
                <config_path>payment/lyra_gift/allowspecific</config_path>
                <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
            </field>

            <field id="specificcountry" translate="label comment" type="multiselect" sortOrder="422" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Authorized countries]]></label>
                <frontend_model>Lyranetwork\Lyra\Block\Adminhtml\System\Config\Form\Field\Multiselect</frontend_model>
                <config_path>payment/lyra_gift/specificcountry</config_path>
                <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                <depends>
                    <field id="allowspecific">1</field>
                </depends>
            </field>

            <field id="custgroup_amount_restriction" translate="label comment" sortOrder="423" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Customer group amount restriction]]></label>
                <comment><![CDATA[Define amount restriction for each customer group.]]></comment>
                <frontend_model>Lyranetwork\Lyra\Block\Adminhtml\System\Config\Form\Field\CustgroupOptions</frontend_model>
                <backend_model>Lyranetwork\Lyra\Model\System\Config\Backend\CustgroupOptions</backend_model>
                <config_path>payment/lyra_gift/custgroup_amount_restriction</config_path>
            </field>
        </group>

        <group id="lyra_payment_page" translate="label" type="text" sortOrder="43" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[PAYMENT PAGE]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="capture_delay" translate="label comment" type="text" sortOrder="431" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Capture delay]]></label>
                <comment><![CDATA[The number of days before the bank capture. Enter value only if different from Lyra Collect general configuration. This setting is considered only if the buyer uses another CC to complete the payment.]]></comment>
                <config_path>payment/lyra_gift/capture_delay</config_path>
            </field>

            <field id="validation_mode" translate="label comment" type="select" sortOrder="432" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Validation mode]]></label>
                <comment><![CDATA[If manual is selected, you will have to confirm payments manually in your Lyra Expert Back Office. This setting is considered only if the buyer uses another CC to complete the payment.]]></comment>
                <source_model>Lyranetwork\Lyra\Model\System\Config\Source\ValidationMode</source_model>
                <config_path>payment/lyra_gift/validation_mode</config_path>
            </field>
        </group>

        <group id="lyra_payment_options" translate="label" type="text" sortOrder="44" showInDefault="1" showInWebsite="1" showInStore="1">
            <label><![CDATA[PAYMENT OPTIONS]]></label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>

            <field id="gift_cards" translate="label comment" type="multiselect" sortOrder="441" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Gift card types]]></label>
                <comment><![CDATA[Select the gift card types that can be used for the payment.]]></comment>
                <frontend_model>Lyranetwork\Lyra\Block\Adminhtml\System\Config\Form\Field\Multiselect</frontend_model>
                <source_model>Lyranetwork\Lyra\Model\System\Config\Source\GiftCard</source_model>
                <config_path>payment/lyra_gift/gift_cards</config_path>
            </field>

            <field id="added_gift_cards" translate="label comment" sortOrder="442" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[Add cards]]></label>
                <comment><![CDATA[Click on button to add one or more new gift cards.<br /><b>Card code: </b>The Lyra Collect exact gift card code.<br /><b>Card label: </b>The label of the new gift card.<br /><b>Card logo: </b>The gift card logo to display on payment method selection page.]]></comment>
                <frontend_model>Lyranetwork\Lyra\Block\Adminhtml\System\Config\Form\Field\Gift\AddedCards</frontend_model>
                <backend_model>Lyranetwork\Lyra\Model\System\Config\Backend\Gift\AddedCards</backend_model>
                <config_path>payment/lyra_gift/added_gift_cards</config_path>
            </field>
        </group>
    </group>
</include>